{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        ".vscode",
        "docs"
    ],
    "lib": ["es2015"]
}